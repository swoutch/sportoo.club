---
export interface MatchProps {
    start: string
    result: string //jul: enum
    team1: string[]
    team2: string[]
}
const { start, result, team1, team2 } = Astro.props as MatchProps;

import Team from "./Team.astro";
---

<div class='match'>
    <div class="team1_won">{result == "1" ? "🏆" : ""}</div>
    <div class="draw">{result == "N" ? "🟰" : ""}</div>
    <div class="team2_won">{result == "2" ? "🏆" : ""}</div>
    <Team players={team1} className="team1_players" />
    <p class="vs">VS</p>
    <Team players={team2} className="team2_players" />
</div>

<style>
    .match {
        display: grid;
        border: 1px solid black;
        grid-template-areas:
            "team1_won draw team2_won"
            "team1_players vs team2_players";
        grid-template-columns: 1fr auto 1fr;
    }

    .team1_won {
        grid-area: team1_won;
        text-align: center;
    }

    .draw {
        grid-area: draw;
        text-align: center;
    }

    .team2_won {
        grid-area: team2_won;
        text-align: center;
    }

    .team1_players {
        grid-area: team1_players;
    }

    .vs {
        grid-area: vs;
        display: flex;
        align-items: center;
        justify-content: center;
    }


    .team2_players {
        grid-area: team2_players;
    }
</style>
