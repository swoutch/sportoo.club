---
export interface Props {
    players: string[]
    className: string;
}

const { players, className } = Astro.props as Props;
---

<div class={className}>
    {players.map((name) => (<p class="player">{name}</p>))}
</div>
<style>
    .team {
        flex: 1
    }

    .player {
        text-align: center;
    }
</style>
